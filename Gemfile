
source "http://rubygems.org"

# For printing awesomely
gem "awesome_print"

# For parsing and scraping Pitchfork
gem "nokogiri"

# For checking track availability and creating playlists
gem "rdio", "0.0.98a"

# Launchy is required to generate an .rdio_access_token
gem "launchy"

# For generating the Rdio access token
gem "oauth"

# For running on a schedule
gem "whenever", :require => false

# Used by whenever to trigger playlist creation
gem "rake"

# For building slightly cooler playlist descriptions
gem "twitter"